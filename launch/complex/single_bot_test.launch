<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="model" default="waffle_pi" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="first_tb3"  default="amigobot_1"/>

    <arg name="first_tb3_x_pos" default="-2.0"/>
    <arg name="first_tb3_y_pos" default=" 0.0"/>
    <arg name="first_tb3_z_pos" default=" 0.0"/>
    <arg name="first_tb3_yaw"   default=" 0.0"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(find amigobot_LTL)/gazebo/empty_10x.world"/>
      <!--arg name="world_name" value="/home/ubuntu484/catkin_ws/src/amigobot_LTL/gazebo/empty.world"/-->
      <arg name="paused" value="false"/>
      <arg name="use_sim_time" value="true"/>
      <arg name="gui" value="true"/>
      <arg name="headless" value="false"/>
      <arg name="debug" value="false"/>
    </include>  

    <group ns = "$(arg first_tb3)">
      <param name="robot_description" command="$(find xacro)/xacro --inorder $(find amigobot_LTL)/model/urdf/turtlebot3_$(arg model).urdf.xacro" />

      <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
        <param name="publish_frequency" type="double" value="50.0" />
        <param name="tf_prefix" value="$(arg first_tb3)" />
      </node>
      
      <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg first_tb3) -x $(arg first_tb3_x_pos) -y $(arg first_tb3_y_pos) -z $(arg first_tb3_z_pos) -Y $(arg first_tb3_yaw) -param robot_description" />
    </group>

    <node pkg="amigobot_LTL" name="amigobot_LTL" type="main_calibrating_path_complex.py" output="screen">
    </node>

    <node pkg="rviz" name="rviz" type="rviz" output="screen" args="-d /home/ubuntu484/catkin_ws/src/amigobot_LTL/launch/complex/rviz/complex.rviz">
    </node>

    <node pkg="tf" type="static_transform_publisher" name="$(arg first_tb3)_map_odom_broadcaster" args="0 0 0 0 0 0 /map /$(arg first_tb3)/odom 5" />

</launch>
